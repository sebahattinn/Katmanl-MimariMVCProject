@model OnlineGallery.Models.User

<div class="container mt-4">
    <h2>@(Model == null ? "Yeni Kullanıcı Ekle" : "Kullanıcı Düzenle")</h2>

    <!-- Başarı ve Hata Mesajları -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Kullanıcı düzenleme formu -->
    <form asp-action="EditUser" method="POST" enctype="multipart/form-data">
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Ad Soyad</label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Adres</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PasswordHash" class="form-label">password </label>
            <input asp-for="PasswordHash" class="form-control" required />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProfileImageUrl" class="form-label">Profil Resmi</label>
            <input asp-for="ProfileImageUrl" class="form-control" value="@Model?.ProfileImageUrl ?? \" default-image-url.jpg\"" />
            <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">Rol</label>
            <select asp-for="Role" class="form-control" required>
                <option value="admin" selected="@(Model?.Role == "admin" ? "selected" : null)">Admin</option>
                <option value="user" selected="@(Model?.Role == "user" ? "selected" : null)">Kullanıcı</option>
                <option value="moderator" selected="@(Model?.Role == "moderator" ? "selected" : null)">Moderatör</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>

    <hr />

    <!-- Kullanıcı Bilgileri ve Düzenleme Linki -->
    <h3>Mevcut Kullanıcı</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Adres</th>
                <th>Profil Resmi</th>
                <th>Rol</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model?.FullName</td>
                <td>@Model?.Email</td>
                <td>@Model?.Address</td>
                <td>
                    @if (!string.IsNullOrEmpty(Model?.ProfileImageUrl))
                    {
                        <img src="~/images/@Model.ProfileImageUrl" alt="Profil Resmi" width="50" height="50" />
                    }
                    else
                    {
                        <span>Resim yok</span>
                    }
                </td>
                <td>@Model?.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-userId="@Model?.UserId" class="btn btn-warning btn-sm">Düzenle</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
