@model IEnumerable<OnlineGallery.Models.User>

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-block {
            margin-bottom: 10px;
        }

        .card {
            margin-bottom: 20px;
        }

        .container {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mb-4">Admin Dashboard</h2>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4>User Management</h4>
                    </div>
                    <div class="card-body">
                        <button id="add-user" class="btn btn-success btn-block">
                            <i class="fas fa-user-plus"></i> Add User
                        </button>
                        <button id="delete-user" class="btn btn-danger btn-block">
                            <i class="fas fa-user-minus"></i> Delete User
                        </button>
                        <button id="edit-user" class="btn btn-warning btn-block">
                            <i class="fas fa-user-edit"></i> Edit User
                        </button>
                        <button id="load-user-list" class="btn btn-info btn-block">
                            <i class="fas fa-users"></i> List Users
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4>Artwork Management</h4>
                    </div>
                    <div class="card-body">
                        <button id="add-artwork" class="btn btn-success btn-block">
                            <i class="fas fa-plus-circle"></i> Add Artwork
                        </button>
                        <button id="delete-artwork" class="btn btn-danger btn-block">
                            <i class="fas fa-trash-alt"></i> Delete Artwork
                        </button>
                        <button id="edit-artwork" class="btn btn-warning btn-block">
                            <i class="fas fa-edit"></i> Edit Artwork
                        </button>
                        <button id="load-table-list" class="btn btn-info btn-block">
                            <i class="fas fa-table"></i> List Artworks
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div id="content-area" class="card">
            <div class="card-body">
                <div id="user-list-container">
                    @await Html.PartialAsync("UserList", Model)
                </div>
                <div id="table-list-container" style="display: none;">
                    @await Html.PartialAsync("TableList", new List<OnlineGallery.Models.Artwork>())
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <script>
        $(document).ready(function () {
            function showModal(title, content) {
                $('#actionModal .modal-title').text(title);
                $('#actionModal .modal-body').html(content);
                $('#actionModal').modal('show');
            }

            $('#load-user-list').click(function () {
                $.get('@Url.Action("GetUserList", "Admin")', function (data) {
                    $('#user-list-container').html(data).show();
                    $('#table-list-container').hide();
                });
            });

            $('#load-table-list').click(function () {
                $.get('@Url.Action("GetUserTable", "Admin")', function (data) {
                    $('#table-list-container').html(data).show();
                    $('#user-list-container').hide();
                });
            });

            $('#add-user').click(function () {
                $.get('@Url.Action("AddUser", "Admin")', function (data) {
                    showModal('Add New User', data);
                });
            });

            $('#edit-user').click(function () {
                const userId = prompt("Enter user ID to edit:");
                if (userId) {
                    $.get(`@Url.Action("EditUser", "Admin")?userId=${userId}`, function (data) {
                        showModal('Edit User', data);
                    });
                }
            });

            $('#delete-user').click(function () {
                const userId = prompt("Enter user ID to delete:");
                if (userId && confirm('Are you sure you want to delete this user?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteUser", "Admin")',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(userId),
                        success: function (response) {
                            if (response.success) {
                                alert('User deleted successfully');
                                $('#load-user-list').click();
                            } else {
                                alert(response.message);
                            }
                        }
                    });
                }
            });

            $('#add-artwork').click(function () {
                $.get('@Url.Action("AddArtwork", "Admin")', function (data) {
                    showModal('Add New Artwork', data);
                });
            });

            $('#edit-artwork').click(function () {
                const title = prompt("Enter artwork title to edit:");
                if (title) {
                    $.get(`@Url.Action("EditArtworkByTitle", "Admin")?title=${encodeURIComponent(title)}`, function (data) {
                        showModal('Edit Artwork', data);
                    });
                }
            });

            $('#delete-artwork').click(function () {
                const title = prompt("Enter artwork title to delete:");
                if (title && confirm('Are you sure you want to delete this artwork?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteArtworkById", "Admin")',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(title),
                        success: function (response) {
                            if (response.success) {
                                alert('Artwork deleted successfully');
                                $('#load-table-list').click();
                            } else {
                                alert(response.message);
                            }
                        }
                    });
                }
            });

            $(document).on('submit', 'form', function (e) {
                e.preventDefault();
                const form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        $('#actionModal').modal('hide');
                        if (response.success) {
                            alert('Operation completed successfully');
                            $('#load-user-list').click();
                        } else {
                            alert(response.message || 'An error occurred');
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
