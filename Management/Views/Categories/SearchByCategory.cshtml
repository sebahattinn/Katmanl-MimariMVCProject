@model List<OnlineGallery.Models.Artwork>

<div>
    <h2>Sanat Eserleri</h2>
    @if (Model.Any())
    {
        foreach (var artwork in Model)
        {
            <div>
                <h3>@artwork.Title</h3>
                <img src="@artwork.ImageUrl" alt="@artwork.Title" />
            </div>
        }
    }
    else
    {
        <p>Bu kategoride sanat eseri bulunmamaktadır.</p>
    }
</div>
