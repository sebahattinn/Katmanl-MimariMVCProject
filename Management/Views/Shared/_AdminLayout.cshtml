@inherits _ViewStart
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <h1 class="mb-0">Admin Panel</h1>
            <nav class="mt-2">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "Admin")">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Users", "Admin")">Kullanıcı Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Artworks", "Admin")">Tablo Yönetimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Settings", "Admin")">Ayarlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Logout", "Account")">Çıkış Yap</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container mt-4">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info">@TempData["InfoMessage"]</div>
        }

        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-dark text-white py-3 mt-auto">
        <div class="container text-center">
            <p class="mb-0">© 2025 OnlineGallery - Tüm Hakları Saklıdır</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
